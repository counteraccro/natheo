{% extends 'admin/admin_base.html.twig' %}

{% block title %}{{ 'user.page_my_account.title' | trans({}, 'user') }}{% endblock %}

{% block body %}
    <h1>{{ 'user.page_my_account.title_h1' | trans({}, 'user') }}</h1>

    {{ breadcrumb(breadcrumb) }}

    <p>
        {{ 'user.page_my_account.description' | trans({}, 'user') }}
    </p>

    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-header text-bg-secondary">
                    {{ 'user.page_my_account.profil' | trans({}, 'user') }}
                </div>
                <div class="card-body">

                    {{ form_row(form.email) }}

                    <fieldset>
                        <legend> {{ 'user.page_my_account.personal_data' | trans({}, 'user') }}</legend>

                        <p> <i class="bi bi-info-circle-fill"></i> {{ 'user.page_my_account.personal_data.description' | trans({}, 'user') }}</p>

                        {{ form(form) }}
                    </fieldset>
                </div>
            </div>
        </div>
        <div class="col-6">
            <fieldset>
                <legend>{{ 'user.page_my_account.statistique' | trans({}, 'user') }}</legend>

                Statistiques
            </fieldset>
        </div>
    </div>

    <fieldset>
        <legend>{{ 'user.page_my_account.password' | trans({}, 'user') }}</legend>

        Mot de passe
    </fieldset>

{% endblock %}