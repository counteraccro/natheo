{% extends 'admin/admin_base.html.twig' %}

{% block title %}{{ 'notification.page_title' | trans({}, 'notification') }}{% endblock %}

{% block body %}

    {{ breadcrumb(breadcrumb) }}

    <h1 class="head-title">
        <svg class="w-7 h-7 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
        </svg>
        {{ 'notification.page_title_h1' | trans({}, 'notification') }}</h1>

    <div class="flex items-center gap-2 float-end">
        <button class="btn btn-outline-dark px-4 py-2 text-sm" onclick="markAllAsRead()">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Tout marquer comme lu
        </button>
        <button class="btn btn-ghost px-3 py-2" onclick="deleteAllRead()">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
        </button>
    </div>

    <p class="text-sm text-[var(--text-secondary)] mb-3">
        <i class="bi bi-bell-fill"></i> {{ 'notification.description' | trans({'mouse' : '<i class="bi bi-mouse2-fill"></i>'}, 'notification') | raw }} <br />
        <i class="bi bi-info-circle-fill"></i>  {{ 'notification.purge.info' | trans({'nb_day' : nbDay}, 'notification') | raw }}
    </p>

    <div id="notifications">
        <div {{ vue_component('Admin/Notification/NotificationList', {
            'url' : path('admin_notification_list', {'page' : page, 'limit' : limit, 'pOnlyNotRead' : 1}), 'page' : page, 'limit' : limit,
            'urlPurge' : path('admin_notification_purge')
        }) }}></div>
    </div>

{% endblock %}

