{% extends 'admin/admin_base.html.twig' %}

{% block title %}{{ 'sidebar.page_title' | trans({}, 'sidebar') }}{% endblock %}

{% block body %}
    <h1>{{ 'sidebar.page_title_h1' | trans({}, 'sidebar') }}</h1>

    {{ breadcrumb(breadcrumb) }}

    <p>
        {{ 'sidebar.description' | trans({}, 'sidebar') }} <br/>
        <i class="bi bi-info-circle"></i> {{ 'sidebar.info' | trans({'icon': '<i class="bi bi-lock-fill"></i>', 'icon2': '<i class="bi bi-eye-slash"></i>'}, 'sidebar') | raw }}
    </p>

    <div {{ vue_component('Admin/GenericGrid', {'url' : path('admin_sidebar_load_grid_data'), 'page' : page, 'limit' : limit}) }}></div>

{% endblock %}