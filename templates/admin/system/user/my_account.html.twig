    <script language='javascript'>
        document.getElementById('{{ field_id(form.avatar) }}').addEventListener('change', function(e) {
            const fileName = e.target.files[0]?.name || 'Aucun fichier choisi';
            document.getElementById('file-name-{{ field_id(form.avatar) }}').textContent = fileName;
        });
    </script>

