<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{{ get_option_system_value_by_key(constant('App\\Utils\\Options\\OptionSystemKey::OS_SITE_NAME')) }}{% endblock %}</title>
    <link rel="icon"
            href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}

        {%set theme = get_option_user_value_by_key(constant('App\\Utils\\Options\\OptionUserKey::OU_THEME_SITE')) %}
        {{ encore_entry_link_tags('admin_'~theme) }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('admin') }}
    {% endblock %}
</head>
<body>
<div class="wrapper">
    <!-- Sidebar  -->
    {% include "/admin/includes/menu.html.twig" %}
    <!-- Page Content  -->
    <div id="content">
        {% include "/admin/includes/header.html.twig" %}
        {% include "/admin/includes/flash.html.twig" %}
        <div id="block-content">
            {% block body %}{% endblock %}
        </div>
    </div>
</div>
    {% include "/admin/includes/scripts.html.twig" %}
</body>
</html>
