{% extends 'admin/admin_base.html.twig' %}

{% block title %}{{ 'database_manager.index.page_title' | trans({}, 'database_manager') }}{% endblock %}

{% block body %}

    {{ breadcrumb(breadcrumb) }}

    <h1 class="head-title">
        <svg class="w-7 h-7 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M19 6c0 1.657-3.134 3-7 3S5 7.657 5 6m14 0c0-1.657-3.134-3-7-3S5 4.343 5 6m14 0v6M5 6v6m0 0c0 1.657 3.134 3 7 3s7-1.343 7-3M5 12v6c0 1.657 3.134 3 7 3s7-1.343 7-3v-6"></path>
        </svg>
        {{ 'database_manager.index.page_title_h1' | trans({}, 'database_manager') }}</h1>

    <div class="float-end">
        <button data-modal-target="help-grid-data-manager" data-modal-toggle="help-grid-data-manager"
                class="btn btn-primary btn-icon ms-2">
            <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                 fill="none"
                 viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9.529 9.988a2.502 2.502 0 1 1 5 .191A2.441 2.441 0 0 1 12 12.582V14m-.01 3.008H12M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
        </button>
    </div>

    <p class="text-sm text-[var(--text-secondary)] mb-3">
        {{ 'database_manager.index.description' | trans({}, 'database_manager') }} <br />
        {#  {{ 'tag.index.description2' | trans({'icon' : '<i class="bi-eye-slash-fill"></i>'}, 'tag') | raw }} #}<br />
    </p>

    <div {{ vue_component('Admin/Tools/DatabaseManager/DatabaseManager', {
        'urls' : urls,
        'translate' : translate,
    }) }}>
    </div>


    <twig:Admin:ModaleComponent id="help-grid-data-manager" bgColor="bg-secondary">
        <twig:block name="header">
            {{ 'database_manager.index.popin.help.title' | trans({}, 'database_manager') }}
        </twig:block>

        <div class="flex flex-row gap-10">
            <div class="flex items-center gap-3 w-75">
                <button type="button" class="btn btn-icon btn-xs btn-ghost-danger">
                    <svg class="icon-sm" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-width="2"
                              d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z"></path>
                    </svg>
                </button> {{ 'database_manager.index.popin.help.delete' | trans({}, 'database_manager') }}
            </div>
            <div class="flex items-center gap-3">
                <button type="button" class="btn btn-icon btn-xs btn-ghost-primary">
                    <svg class="icon-sm" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-width="2"
                              d="M21 12c0 1.2-4.03 6-9 6s-9-4.8-9-6c0-1.2 4.03-6 9-6s9 4.8 9 6Z" />
                        <path stroke="currentColor" stroke-width="2" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                    </svg>
                </button> {{ 'database_manager.index.popin.help.enable' | trans({}, 'database_manager') }}
            </div>
        </div>
        <div class="flex flex-row gap-10">
            <div class="flex items-center gap-3">
                <button type="button" class="btn btn-icon btn-xs btn-ghost-success">
                    <svg class="icon-sm" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-width="2"
                              d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                    </svg>
                </button> {{ 'database_manager.index.popin.help.download' | trans({}, 'database_manager') }}
            </div>
        </div>
    </twig:Admin:ModaleComponent>

{% endblock %}
