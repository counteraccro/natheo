{% extends 'admin/admin_base.html.twig' %}


{% if id is same as null %}
    {% set title = 'sql_manager.add.page_title' | trans({}, 'sql_manager') %}
    {% set titleH1 = 'sql_manager.add.page_title_h1' | trans({}, 'sql_manager') %}
    {% set description = 'sql_manager.add.description' | trans({}, 'sql_manager') %}
{% elseif isExecute %}
    {% set title = 'sql_manager.execute.page_title' | trans({'id' : id}, 'sql_manager') %}
    {% set titleH1 = 'sql_manager.execute.page_title_h1' | trans({}, 'sql_manager') %}
    {% set description = 'sql_manager.execute.description' | trans({}, 'sql_manager') %}
{% else %}
    {% set title = 'sql_manager.update.page_title' | trans({'id' : id}, 'sql_manager') %}
    {% set titleH1 = 'sql_manager.update.page_title_h1' | trans({}, 'sql_manager') ~ ' #' ~ id %}
    {% set description = 'sql_manager.update.description' | trans({}, 'sql_manager') %}
{% endif %}

 {% block title %}
     {{ title }}
 {% endblock %}

{% block body %}

    {{ breadcrumb(breadcrumb) }}

    <h1 class="head-title">
        <svg class="w-7 h-7 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="m8 9 3 3-3 3m5 0h3M4 19h16a1 1 0 0 0 1-1V6a1 1 0 0 0-1-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1Z"></path>
        </svg>
        {{ titleH1 }}</h1>

    <p class="text-sm text-[var(--text-secondary)] mb-3">
        {{ description }}
    </p>

    <div {{ vue_component('Admin/Tools/SqlManager', {
        'id' : id,
        'urls' : urls,
        'translate' : translate,
        'isExecute' : isExecute,
        'schema' : schema
    }) }}>
    </div>

{% endblock %}