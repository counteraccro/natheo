{% extends 'admin/admin_base.html.twig' %}

{% block title %}{{ 'sql_manager.index.page_title' | trans({}, 'sql_manager') }}{% endblock %}

{% block body %}

    {{ breadcrumb(breadcrumb) }}


    <h1 class="head-title">
        <svg class="w-7 h-7 text-[var(--primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="m8 9 3 3-3 3m5 0h3M4 19h16a1 1 0 0 0 1-1V6a1 1 0 0 0-1-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1Z"></path>
        </svg>
        {{ 'sql_manager.index.page_title_h1' | trans({}, 'sql_manager') }}</h1>

    <div class="float-end">
        <a href="{{ path('admin_sql_manager_add') }}" class="btn btn-primary btn-sm">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M19 6c0 1.657-3.134 3-7 3S5 7.657 5 6m14 0c0-1.657-3.134-3-7-3S5 4.343 5 6m14 0v6M5 6v6m0 0c0 1.657 3.134 3 7 3s7-1.343 7-3M5 12v6c0 1.657 3.134 3 7 3s7-1.343 7-3v-6"></path>
            </svg>
            {{ 'sql_manager.index.btn.new' | trans({}, 'sql_manager') }}</a>
        <button data-modal-target="help-grid-faq" data-modal-toggle="help-grid-faq"
                class="btn btn-primary btn-icon ms-2">
            <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                 fill="none"
                 viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9.529 9.988a2.502 2.502 0 1 1 5 .191A2.441 2.441 0 0 1 12 12.582V14m-.01 3.008H12M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
        </button>
    </div>

    <p class="text-sm text-[var(--text-secondary)] mb-3">
        {{ 'sql_manager.index.description' | trans({}, 'sql_manager') }} <br />
        {#  {{ 'tag.index.description2' | trans({'icon' : '<i class="bi-eye-slash-fill"></i>'}, 'tag') | raw }} #}<br />
    </p>


    <div {{ vue_component('Admin/GenericGrid', {'url' : path('admin_sql_manager_load_grid_data',  {'page' : page, 'limit' : limit}), 'page' : page, 'limit' : limit, 'activeSearchData' : true}) }}></div>

    <twig:Admin:ModaleComponent id="help-grid-faq" bgColor="bg-secondary">
        <twig:block name="header">
            <i class="bi bi-question-circle"></i> {{ 'sql_manager.index.popin.help.title' | trans({}, 'sql_manager') }}
        </twig:block>

        <div class="flex flex-row gap-10">
            <div class="flex items-center gap-3 w-75">
                <button type="button" class="btn btn-icon btn-xs btn-ghost-primary">
                    <svg class="icon-sm" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M3.933 13.909A4.357 4.357 0 0 1 3 12c0-1 4-6 9-6m7.6 3.8A5.068 5.068 0 0 1 21 12c0 1-3 6-9 6-.314 0-.62-.014-.918-.04M5 19 19 5m-4 7a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                    </svg>
                </button> {{ 'sql_manager.index.popin.help.disabled' | trans({}, 'sql_manager') }}
            </div>
            <div class="flex items-center gap-3">
                <button type="button" class="btn btn-icon btn-xs btn-ghost-primary">
                    <svg class="icon-sm" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-width="2"
                              d="M21 12c0 1.2-4.03 6-9 6s-9-4.8-9-6c0-1.2 4.03-6 9-6s9 4.8 9 6Z" />
                        <path stroke="currentColor" stroke-width="2" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                    </svg>
                </button> {{ 'sql_manager.index.popin.help.enable' | trans({}, 'sql_manager') }}
            </div>
        </div>
        <div class="flex flex-row gap-10">
            <div class="flex items-center gap-3 w-75">
                <button type="button" class="btn btn-icon btn-xs btn-ghost-primary">
                    <svg class="icon-sm" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-width="2"
                              d="M10.779 17.779 4.36 19.918 6.5 13.5m4.279 4.279 8.364-8.643a3.027 3.027 0 0 0-2.14-5.165 3.03 3.03 0 0 0-2.14.886L6.5 13.5m4.279 4.279L6.499 13.5m2.14 2.14 6.213-6.504M12.75 7.04 17 11.28"></path>
                    </svg>
                </button> {{ 'sql_manager.index.popin.help.edit' | trans({}, 'sql_manager') }}
            </div>
            <div class="flex items-center gap-3">
                <button type="button" class="btn btn-icon btn-xs btn-ghost-success">
                    <svg class="icon-sm" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-width="2"
                              d="m8 9 3 3-3 3m5 0h3M4 19h16a1 1 0 0 0 1-1V6a1 1 0 0 0-1-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1Z"></path>
                    </svg>
                </button> {{ 'sql_manager.index.popin.help.execute' | trans({}, 'sql_manager') }}
            </div>
        </div>
        <div class="flex flex-row gap-10">
            <div class="flex items-center gap-3 w-75">
                <button type="button" class="btn btn-icon btn-xs btn-ghost-danger">
                    <svg class="icon-sm" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-width="2"
                              d="M16 12h4M4 18v-1a3 3 0 0 1 3-3h4a3 3 0 0 1 3 3v1a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1Zm8-10a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"></path>
                    </svg>
                </button> {{ 'sql_manager.index.popin.help.delete' | trans({}, 'sql_manager') }}
            </div>
        </div>
    </twig:Admin:ModaleComponent>

{% endblock %}