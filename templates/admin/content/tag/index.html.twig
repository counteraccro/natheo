{% extends 'admin/admin_base.html.twig' %}

{% block title %}{{ 'tag.index.page_title' | trans({}, 'tag') }}{% endblock %}

{% block body %}
    <h1>{{ 'tag.index.page_title_h1' | trans({}, 'tag') }}</h1>

    {{ breadcrumb(breadcrumb) }}

    <button type="button" class="btn btn-secondary float-end ms-2" data-bs-toggle="modal"
            data-bs-target="#help-grid-tag">
        <i class="bi bi-question-circle"></i>
    </button>
    <a href="{{ path('admin_tag_add') }}" class="float-end btn btn-secondary"><i
                class="bi bi-tag"></i> {{ 'tag.index.btn.new' | trans({}, 'tag') }}</a>

    <p>
        {{ 'tag.index.description' | trans({}, 'tag') }} <br/>
        {{ 'tag.index.description2' | trans({'icon' : '<i class="bi-eye-slash-fill"></i>'}, 'tag') | raw }} <br/>
    </p>


    <div {{ vue_component('Admin/GenericGrid', {'url' : path('admin_tag_load_grid_data', {'page' : page, 'limit' : limit}), 'page' : page, 'limit' : limit, 'activeSearchData' : true}) }}></div>

    <twig:Admin:ModaleComponent id="help-grid-tag" bgColor="bg-secondary">
        <twig:block name="header">
            <i class="bi bi-question-circle"></i> {{ 'tag.index.popin.help.title' | trans({}, 'tag') }}
        </twig:block>

        <div class="row">
            <div class="col">
                <button type="button" class="btn btn-secondary btn-sm mb-1"><i class="bi bi-eye-slash-fill"></i>
                </button> {{ 'tag.index.popin.help.disabled_user' | trans({}, 'tag') }}
            </div>
            <div class="col">
                <button type="button" class="btn btn-secondary btn-sm mb-1"><i class="bi bi bi-eye-fill"></i>
                </button> {{ 'tag.index.popin.help.enable_user' | trans({}, 'tag') }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                <button type="button" class="btn btn-secondary btn-sm mb-1"><i class="bi bi-trash"></i>
                </button> {{ 'tag.index.popin.help.delete' | trans({}, 'tag') }}
            </div>
            <div class="col">
                <button type="button" class="btn btn-secondary btn-sm mb-1"><i class="bi bi bi-pencil-fill"></i>
                </button> {{ 'tag.index.popin.help.edit' | trans({}, 'tag') }}
            </div>
        </div>
    </twig:Admin:ModaleComponent>

{% endblock %}