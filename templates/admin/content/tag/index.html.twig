{% extends 'admin/admin_base.html.twig' %}

{% block title %}{{ 'tag.index.page_title' | trans({}, 'tag') }}{% endblock %}

{% block body %}

    {{ breadcrumb(breadcrumb) }}

    <h1 class="head-title">
        <svg class="w-7 h-7 text-[var(--primary)]" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
             viewBox="0 0 24 24">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M15.2 6H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11.2a1 1 0 0 0 .747-.334l4.46-5a1 1 0 0 0 0-1.332l-4.46-5A1 1 0 0 0 15.2 6Z" />
        </svg>
        {{ 'tag.index.page_title_h1' | trans({}, 'tag') }}
    </h1>

    <div class="float-end">

        <a href="{{ path('admin_tag_add') }}"
           class="btn btn-primary btn-sm">
            <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M15.583 8.445h.01M10.86 19.71l-6.573-6.63a.993.993 0 0 1 0-1.4l7.329-7.394A.98.98 0 0 1 12.31 4l5.734.007A1.968 1.968 0 0 1 20 5.983v5.5a.992.992 0 0 1-.316.727l-7.44 7.5a.974.974 0 0 1-1.384.001Z" />
            </svg>
            {{ 'tag.index.btn.new' | trans({}, 'tag') }}
        </a>

        <button data-modal-target="help-grid-tag" data-modal-toggle="help-grid-tag"
                class="btn btn-primary btn-icon ms-2">
            <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                 fill="none"
                 viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9.529 9.988a2.502 2.502 0 1 1 5 .191A2.441 2.441 0 0 1 12 12.582V14m-.01 3.008H12M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
        </button>
    </div>


    <p class="text-sm" style="color: var(--text-secondary);">
        {{ 'tag.index.description' | trans({}, 'tag') }} <br />
    </p>


    <div {{ vue_component('Admin/GenericGrid', {'url' : path('admin_tag_load_grid_data', {'page' : page, 'limit' : limit}), 'page' : page, 'limit' : limit, 'activeSearchData' : true}) }}></div>

    <twig:Admin:ModaleComponent id="help-grid-tag">
        <twig:block name="header">{{ 'tag.index.popin.help.title' | trans({}, 'tag') }}
        </twig:block>

        <div class="flex flex-row gap-10">
            <div class="flex items-center gap-3">
                <button type="button" class="btn btn-primary btn-icon">
                    <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-width="2"
                              d="M21 12c0 1.2-4.03 6-9 6s-9-4.8-9-6c0-1.2 4.03-6 9-6s9 4.8 9 6Z" />
                        <path stroke="currentColor" stroke-width="2" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                    </svg>

                </button> {{ 'tag.index.popin.help.disabled_user' | trans({}, 'tag') }}
            </div>
            <div class="flex items-center gap-3">
                <button type="button" class="btn btn-secondary btn-icon"><i class="bi bi bi-eye-fill"></i>
                </button> {{ 'tag.index.popin.help.enable_user' | trans({}, 'tag') }}
            </div>
        </div>
        <div class="flex flex-row gap-10">
            <div class="flex items-center gap-3">
                <button type="button" class="btn btn-secondary btn-icon"><i class="bi bi-trash"></i>
                </button> {{ 'tag.index.popin.help.delete' | trans({}, 'tag') }}
            </div>
            <div class="flex items-center gap-3">
                <button type="button" class="btn btn-secondary btn-icon"><i class="bi bi bi-pencil-fill"></i>
                </button> {{ 'tag.index.popin.help.edit' | trans({}, 'tag') }}
            </div>
        </div>
    </twig:Admin:ModaleComponent>
{% endblock %}