{% extends 'admin/admin_base.html.twig' %}

{% block title %}{{ 'global_search.index.page_title_h1' | trans({}, 'global_search') }}{% endblock %}

{% block body %}

    <h1 class="mb-3">{{ 'global_search.index.page_title_h1' | trans({}, 'global_search') }}</h1>

    {{ breadcrumb(breadcrumb) }}

    <p>{{ 'global_search.index.page.description' | trans({}, 'global_search') }}</p>

    {% set defaultsImg = [] %}
    {% set defaultsImg = defaultsImg|merge([ { page : absolute_url(asset('assets/natheo/search/default-page-search.png'))}]) %}
    {% set defaultsImg = defaultsImg|merge([ { menu : absolute_url(asset('assets/natheo/search/default-menu-search.png'))}]) %}

    <div {{ vue_component('Admin/Global/GlobalSearch', {
        'urls' : urls,
        'defaultsImg' : defaultsImg,
        'translate' : translate,
        'search' : search,
        'limit' : limit ,
        'page' : page
    }) }}>
    </div>
{% endblock %}
